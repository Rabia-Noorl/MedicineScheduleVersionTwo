<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicineSchedule" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/darkPeach</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>


    </style>


    <style name="Theme.MedicineSchedule.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MedicineSchedule.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MedicineSchedule.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Floatstyle">
        <item name="android:background">@color/lightPeach</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>

    </style>
  <style name="TextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector</item>
        <item name="boxStrokeWidth">2dp</item>
      <item name="boxStrokeWidthFocused">2dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/selector</item>
      <item name="backgroundTint">@color/selector</item>
      <item name="android:textCursorDrawable">@drawable/cursor</item>

    </style>
    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="TextInputLayoutStyleDropDown"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/selector</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/selector</item>
        <item name="backgroundTint">@color/selector</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="actionDropDownStyle">@color/themeColor</item>
    </style>
    <style name="switchColor">
        <item name="colorControlActivated">@color/themeColor</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>