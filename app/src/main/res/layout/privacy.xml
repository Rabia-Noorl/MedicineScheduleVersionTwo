<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout"
            android:layout_marginTop="60dp"
            android:background="@drawable/privacy_dialog"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="60dp"
                android:text="Privacy Policy"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blackText"
                android:textStyle="bold"></TextView>
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarFadeDuration="50000"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@color/hintColor">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout1"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center"
                    android:text="Privacy Policy describes the policy of medica 360 app and procedures on the collection, use and disclosure of data provided by us regarding medicines and also defines the policies about collection and use of information when You use the Service."
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/greyColr"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:text="\nCollecting and Using Your Personal Data\n"
                    android:textSize="16sp"
                    android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="1. Types of Data Collected\n"
                        android:textSize="16sp"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="\u25CFPersonal Data:"
                        android:textSize="15sp"
                        android:textColor="@color/greyColr"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="While using Our Service, We may ask You to provide Us with certain personally identifiable information
that can be used to contact or identify You. Personally identifiable information may include:
\na) Google account /Email address\nb) First name and last name\n"

   android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="\u25CFUsage Data:"
                        android:textSize="15sp"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="Usage Data is collected automatically when using the Service.\nWhen you access the Service by or through a mobile device, We may collect certain information automatically, including, but not limited to, the type of mobile device You use, Your mobile device unique ID, the IP address of Your mobile device, Your mobile operating system, the type of mobile Internet browser You use, unique device identifiers and other diagnostic data."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/greyColr"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="\n2. Use of Your Personal Data"
                        android:textSize="16sp"
                        android:textColor="@color/greyColr"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="The Company may use Personal Data for the following purposes:
\na) To provide and maintain our Service, including to monitor the usage of our Service.
\nb) To manage Your Account:\nTo manage Your registration as a user of the Service. The Personal Data You provide can give You access
to different functionalities of the Service that are available to You as a registered user.\nc) To contact You:\nTo contact You on email provided by you or to inform you through mobile application&#39;s push
notifications regarding updates or informative communications related to the functionalities, products
or contracted services, including the security updates, when necessary or reasonable for their
implementation."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="\n\u25CFLimitations of medicine's data:"
                        android:textSize="15sp"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="Data provided against each drug and medicine has been collected from different sites and can only be
used for help or assistance but cannot be solely used for diagnosis of disease or cure, mitigation,
treatment purpose. You must not rely on medica 360 app and consult clinical judgements for physical
check ups. App will not responsible for any type of inconvenience."
   android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="\n\u25CFYour Personal Data Transfer:"
                        android:textSize="15sp"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                       android:text="1. Your information, including Personal Data, is processed at the Company&#39;s operating offices and in any
other places where the parties involved in the processing are located. It means that this information
may be transferred to — and maintained on — computers located outside of Your state, province,
country or other governmental jurisdiction where the data protection laws may differ than those from
Your jurisdiction.\n2. Your consent to this Privacy Policy followed by Your submission of such information represents Your
agreement to that transfer.\n3. The Company will take all steps reasonably necessary to ensure that Your data is treated securely and
in accordance with this Privacy Policy and no transfer of Your Personal Data will take place to an
organization or a country unless there are adequate controls in place including the security of Your data
and other personal information."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="\n\u25CFSecurity of Your Personal Data:"
                        android:textSize="15sp"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="The security of Your Personal Data is important to Us, but remember that no method of transmission
over the Internet, or method of electronic storage is 100% secure. While We strive to use commercially
acceptable means to protect Your Personal Data, We cannot guarantee its absolute security.\n"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/greyColr"></TextView>
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/darkPeach"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="\nChanges to this Privacy Policy:"
                        android:textSize="15sp"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="We may update Our Privacy Policy from time to time. We will let You know via email and/or a
prominent notice on Our Service.\n"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/greyColr"></TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/darkPeach"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="\nContact Us:"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="If you have any questions about this Privacy Policy, You can contact us\n
By email:\nmigoinnovations@gmail.com"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/greyColr"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="We use Your Personal data to provide and improve the Service. By using the Service, You agree to the
collection and use of information in accordance with this Privacy Policy."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/greyColr"></TextView>





                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/medicalogo"></ImageView>

</RelativeLayout>