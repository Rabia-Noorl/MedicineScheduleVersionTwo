<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/lightPeach">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/idTVNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note Title"
            android:textColor="@color/blackText"
            android:textSize="18sp"
            android:layout_toLeftOf="@+id/idIVDelete"
            android:padding="4dp"
            android:layout_margin="4dp"></TextView>
        <TextView
            android:id="@+id/idTVTimeStamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVNoteTitle"
            android:text="TimeStamp"
            android:textColor="@color/textColor"
            android:padding="4dp"
            android:layout_toLeftOf="@+id/idIVDelete"
            android:layout_margin="4dp"
            ></TextView>
        <ImageView
            android:id="@+id/idIVDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_delete"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:padding="4dp"
            ></ImageView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>