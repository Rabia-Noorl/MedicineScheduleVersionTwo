<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AddMedication">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_gradient"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:title="Add Measurements"
        app:navigationIcon="@drawable/ic_menu"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/white"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtipmed"
        style="@style/TextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginBottom="3dp"
        android:textColorHint="@color/themeColor"
        app:hintTextAppearance="@style/HelperTextAppearance"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="340dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="true"
            android:hint="Medication Name"
            android:textColor="@color/themeColor"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtipmed"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtipdosequan"
            style="@style/TextInputLayoutStyle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:hint="Dose Quantity"
            android:textColorHint="@color/themeColor"
            app:hintTextAppearance="@style/HelperTextAppearance"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="340dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:cursorVisible="true"
                android:text="1"
                android:textColor="@color/themeColor"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtipdose"
            style="@style/TextInputLayoutStyleDropDown"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtipmed"
            android:layout_marginBottom="3dp"
            android:hint="Dose Type"
            android:textColorHint="@color/themeColor"
            app:hintTextAppearance="@style/HelperTextAppearance"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="340dp">

            <AutoCompleteTextView
                android:id="@+id/txtvwdose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:editable="false"
                android:inputType="none"
                android:text="Pills"
                android:textColor="@color/themeColor"
                android:textColorHint="@color/themeColor"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="20dp"></AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtipInstructions"
        style="@style/TextInputLayoutStyleDropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout"
        android:layout_marginBottom="3dp"
        android:hint="Instructions"
        android:textColorHint="@color/themeColor"
        app:hintTextAppearance="@style/HelperTextAppearance"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="340dp">

        <AutoCompleteTextView
            android:id="@+id/txtvwInstructions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:editable="false"
            android:inputType="none"
            android:text="No Instructions"
            android:textColor="@color/themeColor"
            android:textColorHint="@color/themeColor"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="20dp"></AutoCompleteTextView>
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            android:layout_below="@+id/txtipInstructions"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="340dp">

            <Switch
                android:id="@+id/switchReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reminder and Schedule"
                android:textColor="@color/themeColor"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:textSize="20dp"
                android:theme="@style/switchColor"
                ></Switch>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtipTime"
                style="@style/TextInputLayoutStyleDropDown"
                android:layout_width="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="3dp"
                android:hint="Reminder"
                android:visibility="gone"
                android:textColorHint="@color/themeColor"
                app:hintTextAppearance="@style/HelperTextAppearance"
                >
                <AutoCompleteTextView
                    android:id="@+id/txtvwTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:cursorVisible="true"
                    android:editable="false"
                    android:inputType="none"
                    android:text="Once a Day"
                    android:textColor="@color/themeColor"
                    android:textColorHint="@color/themeColor"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="20dp"></AutoCompleteTextView>
            </com.google.android.material.textfield.TextInputLayout>
                <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtipTime"
                android:fillViewport="true"
                android:id="@+id/scrollView"
                android:layout_marginTop="120dp"
                    android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtiptime1"
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:hint="Time"
                        android:textColorHint="@color/themeColor"
                        app:hintTextAppearance="@style/HelperTextAppearance"
                        tools:layout_editor_absoluteX="187dp"
                        tools:layout_editor_absoluteY="340dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:cursorVisible="true"
                            android:id="@+id/txtTime1"
                            android:text="9:00 AM"
                            android:editable="false"
                            android:textColor="@color/themeColor"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtiptime2"
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:hint="Time"
                        android:textColorHint="@color/themeColor"
                        app:hintTextAppearance="@style/HelperTextAppearance"
                        tools:layout_editor_absoluteX="187dp"
                        tools:layout_editor_absoluteY="340dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:cursorVisible="true"
                            android:id="@+id/txtTime2"
                            android:text="9:00 AM"
                            android:editable="false"
                            android:textColor="@color/themeColor"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtiptime3"
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:hint="Time"
                        android:textColorHint="@color/themeColor"
                        app:hintTextAppearance="@style/HelperTextAppearance"
                        tools:layout_editor_absoluteX="187dp"
                        tools:layout_editor_absoluteY="340dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:cursorVisible="true"
                            android:id="@+id/txtTime3"
                            android:text="9:00 AM"
                            android:editable="false"
                            android:textColor="@color/themeColor"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtiptime4"
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:hint="Time"
                        android:textColorHint="@color/themeColor"
                        app:hintTextAppearance="@style/HelperTextAppearance"
                        tools:layout_editor_absoluteX="187dp"
                        tools:layout_editor_absoluteY="340dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:cursorVisible="true"
                            android:id="@+id/txtTime4"
                            android:text="9:00 AM"
                            android:editable="false"
                            android:textColor="@color/themeColor"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtiptime5"
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:hint="Time"
                        android:textColorHint="@color/themeColor"
                        app:hintTextAppearance="@style/HelperTextAppearance"
                        tools:layout_editor_absoluteX="187dp"
                        tools:layout_editor_absoluteY="340dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:cursorVisible="true"
                            android:id="@+id/txtTime5"
                            android:text="9:00 AM"
                            android:editable="false"
                            android:textColor="@color/themeColor"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtiptime6"
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:hint="Time"
                        android:textColorHint="@color/themeColor"
                        app:hintTextAppearance="@style/HelperTextAppearance"
                        tools:layout_editor_absoluteX="187dp"
                        tools:layout_editor_absoluteY="340dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:cursorVisible="true"
                            android:id="@+id/txtTime6"
                            android:text="9:00 AM"
                            android:editable="false"
                            android:textColor="@color/themeColor"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtiptime7"
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:hint="Time"
                        android:textColorHint="@color/themeColor"
                        app:hintTextAppearance="@style/HelperTextAppearance"
                        tools:layout_editor_absoluteX="187dp"
                        tools:layout_editor_absoluteY="340dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:cursorVisible="true"
                            android:id="@+id/txtTime7"
                            android:text="9:00 AM"
                            android:editable="false"
                            android:textColor="@color/themeColor"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="20dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </com.google.android.material.card.MaterialCardView>


</RelativeLayout>